{
  "manifest_version": 2,
  "name": "Nexus2Torbox",
  "version": "1.0.0",
  "description": "Add Torbox download button to NexusMods mod pages",
  "permissions": [
    "storage",
    "activeTab",
    "*://www.nexusmods.com/*",
    "*://api.torbox.app/*"
  ],
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg"
    },
    "default_title": "Nexus2Torbox",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.nexusmods.com/*/mods/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
